<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.User_Fragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/carView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/profile" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/carView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/green"
            android:textSize="17sp"
            android:text="Xin chào,"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/username_user"
            android:textColor="@color/green"
            android:text="LE MANH QUYNH"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/bt_doanhThu"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_item"
            android:drawableTop="@drawable/baseline_attach_money_24"
            android:gravity="center"
            android:text="Doanh số"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/bt_thongKe"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_item"
            android:drawableTop="@drawable/baseline_equalizer_24"
            android:gravity="center"
            android:text="Thống kê"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/bt_top"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_item"
            android:drawableTop="@drawable/baseline_align_vertical_top_24"
            android:gravity="center"
            android:text="Bán Chạy"
            android:textColor="@color/black"
            app:backgroundTint="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <Button
            android:id="@+id/bt_themNguoiDung"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_item"
            android:drawableTop="@drawable/baseline_settings_24"
            android:gravity="center"
            android:text="Cá nhân"
            android:maxLength="8"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/bt_doimatkhau"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_item"
            android:drawableTop="@drawable/baseline_vpn_key_24"
            android:gravity="center"
            android:text="Mật khẩu"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/bt_Thoat"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_item"
            android:drawableTop="@drawable/baseline_logout_24"
            android:gravity="center"
            android:text="Thoát"
            android:textColor="@color/black"
            app:backgroundTint="@null" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>