<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.AddUser_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_username_add"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_edittext"
            android:hint="Username"
            android:padding="12dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/ed_password_add"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/background_edittext"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginRight="10dp"
                android:text="Show"
                android:textColor="#5DB075"
                android:textSize="17dp"
                android:textStyle="bold" />
        </FrameLayout>

        <EditText
            android:id="@+id/ed_fullName_add"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_edittext"
            android:hint="FullName"
            android:padding="12dp" />

        <EditText
            android:id="@+id/ed_email_add"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_edittext"
            android:hint="Email"
            android:padding="12dp" />
        <Spinner
            android:id="@+id/spinner_role_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/bt_signUp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="17dp"
            app:backgroundTint="@null"
            android:text="Sign Up"
            android:background="@drawable/background_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_forgotPass"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#5DB075"
            android:text="Forgot your password?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>